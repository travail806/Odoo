<odoo>
    <record id="view_move_form_billing_period" model="ir.ui.view">
        <field name="name">account.move.form.billing.period</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Insertion des dates de période de facturation -->
            <xpath expr="//field[@name='invoice_date']" position="after">
                <group>
                    <field name="billing_start_date"/>
                    <field name="billing_end_date"/>
                </group>
            </xpath>

            <!-- Bouton Générer relevé formations -->
            <xpath expr="//header" position="inside">
                <button
                    name="action_generate_training_pdf"
                    type="object"
                    string="Générer relevé formations"
                    class="btn-primary"
                />
            </xpath>

        </field>
    </record>
</odoo>
