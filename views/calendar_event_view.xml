<odoo>
    <record id="view_calendar_event_form_inherit_recurring_product" model="ir.ui.view">
        <field name="name">calendar.event.form.inherit.recurring.product</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='options']" position="inside">
                <group>
                    <field name="recurring_product_id"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
