<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="product_template_form_inherit_calendar_service" model="ir.ui.view">
		<field name="name">product.template.form.recurrent</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_form_view"/>
		<field name="arch" type="xml">
			<xpath expr="//sheet//group" position="inside">
				<group string="Recurrence" name="group_recurrence" invisible="type != 'service'">
					<field name="is_product_recurrent" optional="hide" readonly="type != 'service'"/>
				</group>
			</xpath>
		</field>
	</record>
</odoo>
